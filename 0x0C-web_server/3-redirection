#!/usr/bin/env bash
# Configuring a new machine that redirects to another page

sudo apt-get update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html
string="server_name redirect_me\/;\n\trewrite ^(.\*)\$ https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4\/\$1 permanent;"
sudo sed -i "s/server_name _;/$string" /etc/nginx/sites-enabled/default

sudo service nginx start
